<h1>Post</h1>
<br><br>
<h3>IN MY FEELINGS, LIKE ...</h3>
<% if @post.song_file.attached? %>
  <audio controls src="<%= url_for @post.song_file %>"></audio>
<% end %>
<br><br>
  <h4><u>MOOD</u>:     <em><%=@post.title%></em></h4> <br>
   <%=@post.content%> <br>
  <br>

  <% @post.comments.each do |x| %>
    <h5><%= @user.name %> says:</h5>
  <p>
  <h4>COMMENT:</h4><br><%= x.text %> <br>
  <% end %>

  <%= render partial: 'comments/form', locals: { comment: @comment } %>

 <br>
<p> <%= link_to "Go Back", posts_path %> </p>
<%= link_to "Edit Post", edit_post_path(@post), class: "button btn btn-warning" %>   ||
<%= link_to "Delete Post", post_path(@post.id), method: :delete, data: {confirm: "Really?"}, class: "button btn btn-danger" %>
