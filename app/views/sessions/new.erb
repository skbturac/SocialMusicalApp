<div class="ui middle aligned center aligned grid">
  <div class="column" id="login-box">
    <h2 class="ui teal image header">
      <%= image_tag "headphones.png", class: "image" %>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_tag login_path, class: "ui large form" do %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag :email, params[:email], class: "login-input" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password, class: "login-input" %>
          </div>
        </div>
        <%= submit_tag "Log In", class: "ui large teal submit button" %>
      </div>
    </form>
    <br>
    New to us? <%= link_to "Sign up now!", signup_path, class: "ui message teal button" %>
  </div>
</div>
<% end %>



