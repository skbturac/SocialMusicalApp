<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-4 sidenav">
      <p></p>
      <p></p>
      <h1>My Profile</h1>

          <% if @current_user.image.attached? %>
      <img src="<%= url_for @current_user.image %>", class="img-rounded profile" alt="<%= @current_user.name %>", style="width:220px;height:220px;"></audio>
      <% else %>
      <img src="https://i.pinimg.com/originals/cb/80/cc/cb80cc8aed218910fc3e42163f891798.jpg", class="img-rounded media-object" style="width:200px;height:200px;" alt="i gotta face for radio">
      <% end %>
          <br><br>
            Name: <%= @current_user.name %> <br>
            <br>
            Email Address: <%= @current_user.email %> <br>
            <br>
            <h4>A bit about me...</h4>
            <p><%= @current_user.bio %></p>

          <h4><%= render 'profile_pic' %>
        <br><br> <%= render 'bio' %> </h4>

          <h3><%= link_to "Post Somethin", new_post_path, class: "button btn btn-primary btn-md" %></h3>

        <br>
        <br>


    </div>

    <div align="center" class="col-sm-5 abril">
      <p></p>
      <p></p>
      <h4 class="white">RECENT POSTS</h4>
      <hr>
      <% @current_user.posts.each do |p| %>
      <h2><u><%= p.title %></u></h2>
      <h5><span class="glyphicon glyphicon-time"></span> Post by <%= p.user.name %>,  <%= time_ago_in_words(p.created_at)%> ago</h5>
      <p>  <h4>MOOD ...</h4>
        <% if p.song_file.attached? %>
        <audio controls src="<%= url_for p.song_file %>"></audio>
        <% end %>

                <br><br>
                <h4><%= p.content %></h4>
                <%= link_to "View Post", p, class: "button btn btn-info" %>   ||
                <%= link_to 'Edit Post', edit_post_path(p), class: "button btn btn-warning"  %>
                <hr>

                 <% end %></p>
      <br><br>


    </div>
  </div>
</div>
