<h1>My Profile</h1>

<% if @current_user.image.attached? %>
<img src="<%= url_for @current_user.image %>"></img>
<% end %>
<br>
  Name: <%= @current_user.name %> <br>
  <br>
  Email Address: <%= @current_user.email %> <br>
  <br>
  <br>

<h4><%= render 'profile_pic' %></h4>

<h3><%= link_to "Post Somethin", new_post_path %></h3>

  <br>
  <br>
  <% @current_user.posts.each do |p| %>
  <h2><u><%= p.title %></u></h2>

  <h4>IN MY FEELINGS, LIKE ...</h4>
  <% if p.song_file.attached? %>
  <audio controls src="<%= url_for p.song_file %>"></audio>
  <% end %>


  <br><br>
  <h4><%= p.content %></h4>
  <%= link_to "click to REACKT", p %>
  <br>
  <br>
    <% p.comments.each do %>
  <div class="ui comments">
    <h3 class="ui dividing header">Comments</h3>
    <div class="comment">
      <a class="avatar">
      </a>
      <div class="content">
        <a class="author">(user)</a>
        <div class="metadata">
          <span class="date"><%= time_ago_in_words(Time.now) %></span>
        </div>
        <div class="text">
          <%= p.comments.text %>
        </div>
        <div class="actions">
          <a class="reply">Reply</a>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<br>
<br>

<p> <%= link_to "Edit Profile", edit_user_path(@current_user) %> </p>
<p> <%= link_to "Delete My Profile", @current_user, method: :delete, data: {confirm: "Really?"} %> </p>
