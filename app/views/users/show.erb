
<%# <p> <%= link_to "Go Back", users_path %>

<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-4 sidenav">
      <p></p>
      <p></p>
      <h1><%= @user.name %>'s Profile</h1>
      <% if @user.image.attached? %>
      <img src="<%= url_for @user.image %>", class="img-rounded profile" alt="<%= @user.name %>", style="width:250px;height:250px;"></audio>
      <% else %>
      <img src="https://i.pinimg.com/originals/cb/80/cc/cb80cc8aed218910fc3e42163f891798.jpg", class="img-rounded media-object" style="width:250px;height:250px;" alt="i gotta face for radio">
      <% end %>
        <h4 class="abril">Name: <%= @user.name %> </h4><br>
      <br>
        Email Address: <%= @user.email %>
        <br><br>
        <h3><u>About Me</u> :</h3>
        <p><%= @user.bio %></p>
    </div>

    <div align="center" class="col-sm-5 ubuntu white" style="padding:5em;">
      <p></p>
      <p></p>
      <h4 class="white">RECENT POSTS</h4>
      <hr>
      <% @user.posts.each do |p| %>
      Title:  <u><%= link_to "#{p.title}", p %></u>
      <h5><span class="glyphicon glyphicon-time"></span> Post by <%= p.user.name %>, Sep 27, 2015.</h5>
      <p>  <h4>MOOD: </h4>
        <% if p.song_file.attached? %>
        <audio controls src="<%= url_for p.song_file %>"></audio>
        <% end %>

                <br><br>
                <h4><%= p.content %></h4>
                <%= link_to "COMMENTS!", p, class: "button btn btn-primary btn-md" %>
                <hr>
                 <% end %></p>
      <br><br>


    </div>
  </div>
</div>
